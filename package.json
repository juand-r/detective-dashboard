{
  "name": "detective-solutions-dashboard",
  "version": "1.0.1",
  "description": "Dashboard for viewing detective story solutions and metadata",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node start.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:frontend": "cd frontend && npm install",
    "postinstall": "npm run install:frontend && npm run build:frontend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 